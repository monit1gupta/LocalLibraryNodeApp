extends layout 
block content 
    h2= title 
    form(method = 'POST')
        div.form-group 
            label(for='name') Genre:
            input#name.form-control(type='text', placeholder= 'Fantasy, Adventure, etc..', name='name', required value=(undefined===genre? '': genre.name))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                p
                    li.text-danger!= error.msg
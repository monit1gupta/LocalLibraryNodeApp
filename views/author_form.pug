extends layout 
block content 
    h2= title 
    form(method='POST')
        div.form-group 
            label(for="first_name") First Name*: 
            input#first_name.form-control(type="text" placeholder='Oscar' name='first_name' required value=(author===undefined?'':author.first_name))
            label(for="family_name") Family Name*: 
            input#family_name.form-control(type="text" placeholder='Wilde' name='family_name' required value=(author===undefined?'':author.family_name))
            label(for="date_of_birth") Date of Birth: 
            input#date_of_birth.form-control(type="date" name='date_of_birth' value=(author===undefined?'':author.date_of_birth))
            label(for="date_of_death") Date of Death: 
            input#date_of_death.form-control(type="date" name='date_of_death' value=(author===undefined?'':author.date_of_death))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                p
                    li.text-danger!= error.msg
